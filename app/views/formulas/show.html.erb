<% provide(:title, @formula.alpha ) %>

<div class="row">
  <aside class="span4">
    <section>
    <h1>
        <%= image_for @formula %>
        <%= @formula.alpha %>
    </h1>
    </section>
  </aside>
</div>

<table  align="center" cellpadding="0" border=10 bordercolor=lightblue cellspacing="0" width="75%">
  <tr align="center">
    <th width="100" border=10 bordercolor=gray >
      Index
    </th>
    <th width="300" border=10 bordercolor=gray >
      <%= @formula.base %>.<%= @formula.offset %>.<%= @formula.subindex %> 
    </th>
  </tr>
  <tr align="center">
    <td width="75" border=10 bordercolor=gray >
      Index Formula
    </td>
    <td width="300" border=10 bordercolor=gray >
      <%= @formula.iform %>
    </td>
  </tr>
  <tr align="center">
    <td width="75" border=10 bordercolor=gray >
      Word Formula
    </td>
    <td width="300" border=10 bordercolor=gray >
      <%= @formula.word_form %>
    </td>
  </tr>
  <tr align="center">
    <td width="75" border=10 bordercolor=gray >
      Abbreviation Formula
    </td>
    <td width="300" border=10 bordercolor=gray >
       <%= @formula.abbrev_form %>
    </td>
  </tr>
  <tr align="center">
    <td width="75" border=10 bordercolor=gray >
      Alphabetic Form
    </td>
    <td width="300" border=10 bordercolor=gray >
       <%= @formula.alpha %>
    </td>
  </tr>
</table>

<!--header class="navbar navbar-fixed-top"-->
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to "Update Formulas", edit_formula_path( @formula ) %></li>
            <!--li><%= link_to "Add Formula Data", new_formula_path %></li-->
            <!-- Where, here? add a next link for next record, next in ID, or next in search results, etc? -->
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
<!--/header-->

